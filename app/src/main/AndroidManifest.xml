<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nosfie.easyorg">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon256"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewTask.NewTaskFirstScreen" android:windowSoftInputMode="stateHidden" android:noHistory="true" android:label="Новая задача">
        </activity>
        <activity android:name=".NewTask.NewTaskSecondScreen" android:noHistory="true" android:label="Новая задача" >
        </activity>
        <activity android:name=".NewTask.NewTaskShoppingList"
            android:noHistory="true"
            android:label="Новая задача"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".TaskList.TaskList">
        </activity>
        <activity android:name=".TaskList.ShoppingList" android:noHistory="true" android:label="Список покупок" >
        </activity>
        <activity android:name=".Settings.Settings" android:label="Настройки" >
        </activity>
        <activity android:name=".TaskList.EditShoppingList" android:windowSoftInputMode="stateHidden" android:noHistory="true" android:label="Редактировать список покупок">
        </activity>
        <activity android:name=".TaskCalendar.TaskCalendar" android:label="Календарь задач">
        </activity>
        <activity android:name=".TaskCalendar.DayTasks" android:label="Задачи на день">
        </activity>
        <activity android:name=".ShoppingLists.ShoppingLists" android:label="Списки покупок">
    </activity>
        <activity android:name=".ShoppingLists.AddTemplate" android:noHistory="true" android:label="Добавление шаблона" android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".ShoppingLists.EditTemplate" android:noHistory="true" android:label="Редактирование шаблона" android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".Notes.Notes" android:label="Заметки">
        </activity>
        <activity android:name=".Notes.AddNote" android:label="Добавление заметки" android:noHistory="true" android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".Notes.ViewNote" android:label="Добавление заметки" android:noHistory="true" android:windowSoftInputMode="stateHidden">
        </activity>
        <receiver android:name=".Reminder.Receiver" />
    </application>

</manifest>
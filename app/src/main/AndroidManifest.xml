<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nosfie.easyorg">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon256"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewTask.NewTaskFirstScreen"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateHidden"
            android:noHistory="true"
            android:label="Новая задача">
        </activity>
        <activity
            android:name=".NewTask.NewTaskSecondScreen"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:noHistory="true"
            android:label="Новая задача" >
        </activity>
        <activity
            android:name=".NewTask.NewTaskShoppingList"
            android:noHistory="true"
            android:label="Новая задача"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".TaskList.TaskList"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".TaskList.ShoppingList"
            android:noHistory="true"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Список покупок" >
        </activity>
        <activity
            android:name=".Settings.Settings"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Настройки" >
        </activity>
        <activity
            android:name=".TaskList.EditShoppingList"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:noHistory="true"
            android:label="Редактировать список покупок">
        </activity>
        <activity
            android:name=".TaskCalendar.TaskCalendar"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Календарь задач">
        </activity>
        <activity
            android:name=".TaskCalendar.DayTasks"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Задачи на день">
        </activity>
        <activity
            android:name=".ShoppingLists.ShoppingLists"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Списки покупок">
        </activity>
        <activity
            android:name=".ShoppingLists.AddTemplate"
            android:noHistory="true"
            android:label="Добавление шаблона"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".ShoppingLists.EditTemplate"
            android:noHistory="true"
            android:label="Редактирование шаблона"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".Notes.Notes"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Заметки">
        </activity>
        <activity
            android:name=".Notes.AddNote"
            android:label="Добавление заметки"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:noHistory="true"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".Notes.ViewNote"
            android:label="Просмотр заметки"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:noHistory="true">
        </activity>
        <receiver android:name=".Reminder.Receiver" />
        <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nosfie.easyorg.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#888888"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/newTask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1px"
                android:layout_marginEnd="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="10dip"
                tools:ignore="NestedWeights">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/new_task"
                    android:padding="10dp"
                    app:srcCompat="@drawable/note_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/new_task"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/currentTaskList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="10dip">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/task_list"
                    android:padding="10dip"
                    app:srcCompat="@drawable/stat_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/task_list"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_marginStart="1px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="10dip">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/calendar"
                    android:padding="10dip"
                    app:srcCompat="@drawable/calendar_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/calendar"
                    android:textColor="#000000" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/shoppingLists"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="10dip"
                tools:ignore="NestedWeights">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/shopping_lists"
                    android:padding="10dip"
                    app:srcCompat="@drawable/cart_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/shopping_lists"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="10dip">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/notes"
                    android:padding="10dip"
                    app:srcCompat="@drawable/pencil_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/notes"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="10dip">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/settings"
                    android:padding="10dip"
                    app:srcCompat="@drawable/settings_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/settings"
                    android:textColor="#000000" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nosfie.easyorg.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#888888"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/new_task_button"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1px"
                    android:layout_marginEnd="1px"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="10dip"
                    android:weightSum="100">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="85"
                        android:contentDescription="@string/new_task"
                        android:padding="10dip"
                        app:srcCompat="@drawable/note_icon" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/new_task"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/current_task_list"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="10dip"
                    android:weightSum="100">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="85"
                        android:contentDescription="@string/task_list"
                        android:padding="10dip"
                        app:srcCompat="@drawable/stat_icon" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/task_list"
                        android:textColor="#000000" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/calendar"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1px"
                    android:layout_marginEnd="1px"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="10dip"
                    android:weightSum="100">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="85"
                        android:contentDescription="@string/calendar"
                        android:padding="10dip"
                        app:srcCompat="@drawable/calendar_icon" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/calendar"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/current_shopping_list"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="10dip"
                    android:weightSum="100">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="85"
                        android:contentDescription="@string/shopping_lists"
                        android:padding="10dip"
                        app:srcCompat="@drawable/cart_icon" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Список покупок"
                        android:textColor="#000000" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1px"
                    android:layout_marginEnd="1px"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="10dip"
                    android:weightSum="100">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="85"
                        android:contentDescription="@string/finances"
                        android:padding="10dip"
                        app:srcCompat="@drawable/analytics_icon" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/finances"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settings_button"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="10dip"
                    android:weightSum="100">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="85"
                        android:contentDescription="@string/settings"
                        android:padding="10dip"
                        app:srcCompat="@drawable/settings_icon" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/settings"
                        android:textColor="#000000" />
                </LinearLayout>

            </TableRow>

        </TableLayout>
    </LinearLayout>
</RelativeLayout>
